/* What does the app's SQL look like? */

CREATE TABLE app (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    itemname TEXT,
    price INTEGER);

INSERT INTO app (id, itemname, price) VALUES (1, "Nintendo 64", 50); 
INSERT INTO app (id, itemname, price) VALUES (2, "pokemon t shirt", 20); 
INSERT INTO app (id, itemname, price) VALUES (3, "butterfly cup", 15); 

SELECT * FROM app;     
UPDATE app SET price = 100 WHERE id=1; 
UPDATE app SET price = 33 WHERE id=2; 
UPDATE app SET price = 24 WHERE id=3; 

SELECT * FROM app;


DELETE FROM app WHERE id = 2;
SELECT * FROM app;

